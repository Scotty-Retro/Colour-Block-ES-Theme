<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

   <!---------------------------gamecarousel------------------------------------- -->

<view name="gamecarousel">
<gamecarousel name="gamecarousel">
<zIndex>43</zIndex>	      
<type>vertical_wheel</type>
<pos>-0.39 0</pos>
<size>1 1</size>
<logoScale>1.2</logoScale>
<logoSize>0.150 0.260</logoSize>
<color>00000000</color>
<maxLogoCount>30</maxLogoCount>
<logoRotation>8</logoRotation>
<logoRotationOrigin>-2.0 0.2</logoRotationOrigin>
<logoAlignment>center</logoAlignment>   
<imageSource>marquee</imageSource>
</gamecarousel> 

    <rating name="md_rating">
     <pos>0.4 0.8</pos>
      <size>0.1 0.1</size>
         <path>./_inc/cont.png</path>
      <filledPath>./_inc/cont.png</filledPath>
      <unfilledPath>./_inc/contempty.png</unfilledPath>
    </rating>


     <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.04</fontSize>
     <pos>0.1 0.96</pos>
       <fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
     </helpsystem>
	 
	  <image name="frames" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/frames/${system.theme}.png</path>
         <zIndex>998</zIndex>          
       </image> 


	  <image name="bg" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
		 <path>./default/_inc/wall.jpg</path>
         <path>./_inc/bg/${system.theme}.png</path>
		 <zIndex>1</zIndex>
     </image>
    
    <text name="gamecarouselLogoText">
		<color>FFFFFFFF</color>
		<glowColor>00000050</glowColor>
		<glowSize>3</glowSize>
		<glowOffset>3</glowOffset>
		<lineSpacing>1.0</lineSpacing>
        <fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
        <fontSize>0.030</fontSize>
    </text>	
	
<image name="pointer" extra="true">
<pos>0.022 0.50</pos>
<origin>0.5 0.5</origin>
<color>ffffffD9</color>
<size>0.045 0.145</size>
<path>./art/sistemas/pointerl/default.png</path>
<path>./art/sistemas/pointerl/${system.theme}.png</path>
<zIndex>60</zIndex>
<zIndex>999</zIndex>
</image>

	<image name="char" extra="true">
		<pos>-0.05 0</pos>
		<maxSize>1 1</maxSize>
		<color>ffffff</color>
		<path>./default/char-d.png</path>
		<path>./${system.theme}/char.png</path>
           <storyboard>
           <animation property="x" from="-2" to="2" duration="3500" autoreverse="false" begin="-2"/>
           </storyboard>
	    <zIndex>999</zIndex>
	</image>

 

   		<image name="md_thumbnail">
			<origin>0.5 0.5</origin>
			<pos>0.87 0.77</pos>
			<maxSize>0.28 0.3</maxSize>
			<zIndex>999</zIndex>
		</image>
		
   		<image name="md_marquee">
			<pos>0.5 0.134</pos>
			<maxSize>0.3 0.2</maxSize>
			<origin>0.5 0.5</origin>
			<linearSmooth>true</linearSmooth>
	   <storyboard event="activate">
        <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>		
			<zIndex>999</zIndex> 
		</image>
 
	
     <video name="md_video">
		<color>ffffff</color>
        <pos>0.515 0.525</pos>
        <origin>0.5 0.5</origin>
        <size>0.51 0.78</size>
		<delay>0.4</delay>
		<effect>none</effect>		 
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
		<zIndex>2</zIndex>
     </video> 
	
	
		<text name="logoText">
		<pos>0.691 0.444</pos>
	    <fontSize>0.11</fontSize>
		<fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
	    <size>0.57 0.1</size>
		<alignment>center</alignment>
        <color>FFFFFFB3</color>
        <forceUppercase>1</forceUppercase>
	    <rotation>-90</rotation>  
	    <zIndex>999</zIndex>
    </text>
	
</view>  
   
   </theme>
