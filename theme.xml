<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="gamecarousel">
<formatVersion>7</formatVersion>

 <feature supported="carousel">
   <view name="system">
	<sound name="directory">
    <path>./_inc/music</path>
	</sound>	  
   </view>
</feature>

<!---------------------------variable------------------------------------- -->

   <include subset="menu" name="Menu 01">./Menu-01.xml</include>
   <include subset="menu" name="Menu 02">./Menu-02.xml</include>
   <include subset="menu" name="Menu 03">./Menu-03.xml</include>
   <include subset="menu" name="Menu 04">./Menu-04.xml</include>

   <include subset="logo" name="square">./squarelogos.xml</include>
   <include subset="logo" name="text">./textlogos.xml</include>


    <include subset="Shader" name="Shader off">./art/shader/off.xml</include>
	<include subset="Shader" name="Shader 01">./art/shader/scanlines.xml</include>
    <include subset="Shader" name="Shader 02">./art/shader/crt.xml</include>
    <include subset="Shader" name="Shader 03">./art/shader/scanlines3.xml</include>
    <include subset="Shader" name="Shader 04">./art/shader/scanlines4.xml</include>
    <include subset="Shader" name="Shader 05">./art/shader/scanlines5.xml</include>
    <include subset="Shader" name="Shader 06">./art/shader/scanlines10.xml</include>
	

<!---------------------------screen------------------------------------- -->

<view name="screen">
<text name="clock">
		<glowColor>101010</glowColor>
		<fontSize>0.024</fontSize>
		<color>ffffff</color>
		<fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
		<pos>2 2</pos>
		<size>0.05 0.058</size>
		<verticalAlignment>right</verticalAlignment>
		</text>
		
		
     <controllerActivity name="controllerActivity">
      <pos>0.01 0.010</pos>
      <size>0.085 0.025</size>
      <itemSpacing>0.003</itemSpacing>
      <imagePath>./_inc/gamepad.svg</imagePath>
      <color>FFFFFF1A</color>
      <activityColor>ff00001A</activityColor>
      <hotkeyColor>ffffff1A</hotkeyColor>
    </controllerActivity>

    <batteryIndicator name="batteryIndicator">
      <pos>0.955 0.0125</pos>
      <size>0.033 0.033</size>
      <incharge>./_inc/battery/incharge.svg</incharge>
      <full>./_inc/battery/full.svg</full>
      <at75>./_inc/battery/75.svg</at75>
      <at50>./_inc/battery/50.svg</at50>
      <at25>./_inc/battery/25.svg</at25>
      <empty>./_inc/battery/empty.svg</empty>
      <color>FFFFFFA0</color>
      </batteryIndicator>
      <batteryIndicator name="batteryIndicator" tinyScreen="true">
      <pos>0.915 0.013</pos>
      <size>0.07 0.07</size>
      </batteryIndicator>
    </view>

<!---------------------------menu------------------------------------- -->

   <view name="menu">
   
      <menuText name="menutitle">
         <fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
         <fontSize>0.04</fontSize>
      </menuText>
	  
      <menuText name="menufooter">
         <fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
         <fontSize>0.023</fontSize>
      </menuText>
	  
    <menuText name="menutext">
      <fontPath>./_inc/fonts/04B_30__.ttf</fontPath>
      <fontSize>0.029</fontSize>
      <selectorGradientType>horizontal</selectorGradientType>
    </menuText>
	
    <menuTextSmall name="menutextsmall">
      <fontPath>./_inc/04B_30__.ttf</fontPath>
      <fontSize>0.022</fontSize>
    </menuTextSmall>
	
    <menuBackground name="menubg">
	  <path>./_inc/back.png</path>
	  <cornerSize>32 32</cornerSize>
    </menuBackground>
	
    <menuIcons name="menuicons">
      <iconKodi>./_inc/icons/Kodi.png</iconKodi>
      <iconSystem>./_inc/icons/System.png</iconSystem>
      <iconUpdates>./_inc/icons/Updates.png</iconUpdates>
      <iconGames>./_inc/icons/Games.png</iconGames>
      <iconControllers>./_inc/icons/Controllers.png</iconControllers>
      <iconUI>./_inc/icons/UI.png</iconUI>
      <iconSound>./_inc/icons/Sound.png</iconSound>
      <iconNetwork>./_inc/icons/Network.png</iconNetwork>
      <iconScraper>./_inc/icons/Scraper.png</iconScraper>
      <iconAdvanced>./_inc/icons/Advanced.png</iconAdvanced>
      <iconQuit>./_inc/icons/Quit.png</iconQuit>
      <iconRestart>./_inc/icons/Restart.png</iconRestart>
      <iconShutdown>./_inc/icons/Shutdown.png</iconShutdown>
      <iconFastShutdown>./_inc/icons/Fastshutdown.png</iconFastShutdown>
      <iconRetroachievements>./_inc/icons/Contest.png</iconRetroachievements>
	  <iconEmuelec>./_inc/icons/Emuelec.png</iconEmuelec>
    </menuIcons>
	
    <menuTextEdit name="menutextedit">
      <inactive>./_inc/textinput_ninepatch.png</inactive>
      <active>./_inc/textinput_ninepatch_active.png</active>
    </menuTextEdit>
	
</view> 


<!--------------------------- Gamelist ----------------------- -->

<include name="basic">./basic.xml</include>
<include name="grid">./grid.xml</include>
<include name="boxartgrid">./boxartgrid.xml</include>
<include name="game carousel">./gamecarousel.xml</include>
<include name="video">./video.xml</include>





   </theme>
